# Check `docs/pipeline.md` to get info about this file

resources:
- name: <%= @name %>-repository
  type: git
  source:
    uri: <%= @git %>
    branch: master

- name: <%= @name %>-image
  type: docker-image
  source:
    repository: <%= @image %>

jobs:
- name: build <%= @name %> image
  serial: true
  plan:
  - get: <%= @name %>-repository
    trigger: true
  - put: <%= @name %>-image
    params:
      build: <%= @name %>-repository
