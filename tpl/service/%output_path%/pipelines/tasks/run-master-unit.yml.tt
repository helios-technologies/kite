---
platform: linux

image_resource:
  type: docker-image
  source:
    repository: <%= @image %>
    tag: version
    username: _json_key
    password: ((gcr_password))

inputs:
- name: <%= @name %>-repository
- name: version

run:
  path: sh
  args: ["-exc", "cd <%= @name %>-repository && echo 'Success'"]